{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/ff6-save-editor/plugin-registry/main/schema/plugin-schema.json",
  "title": "FF6 Save Editor Plugin Metadata Schema",
  "description": "JSON schema for FF6 Save Editor plugin metadata files",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "author",
    "contact",
    "description",
    "longDescription",
    "category",
    "tags",
    "permissions",
    "minEditorVersion",
    "homepage"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique plugin identifier (lowercase, hyphens only)",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "minLength": 3,
      "maxLength": 50,
      "examples": ["stats-display", "item-manager", "party-optimizer"]
    },
    "name": {
      "type": "string",
      "description": "Human-readable plugin name",
      "minLength": 3,
      "maxLength": 50,
      "examples": ["Character Stats Display", "Item Manager"]
    },
    "version": {
      "type": "string",
      "description": "Plugin version (semantic versioning)",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["1.0.0", "2.1.3"]
    },
    "author": {
      "type": "string",
      "description": "Plugin author name",
      "minLength": 2,
      "maxLength": 100,
      "examples": ["John Doe", "FF6 Editor Team"]
    },
    "contact": {
      "type": "string",
      "description": "Author contact (email or URL)",
      "format": "uri-reference",
      "examples": ["john@example.com", "https://github.com/johndoe"]
    },
    "description": {
      "type": "string",
      "description": "Brief plugin description (shown in marketplace)",
      "minLength": 20,
      "maxLength": 200,
      "examples": ["Display comprehensive character stats including HP, MP, equipment, and spells"]
    },
    "longDescription": {
      "type": "string",
      "description": "Detailed plugin description (shown in details page)",
      "minLength": 50,
      "maxLength": 2000,
      "examples": ["This plugin provides a comprehensive view of character statistics..."]
    },
    "category": {
      "type": "string",
      "description": "Plugin category",
      "enum": ["utility", "automation", "analysis", "enhancement", "debug"],
      "examples": ["utility", "automation"]
    },
    "tags": {
      "type": "array",
      "description": "Plugin tags for search and filtering",
      "minItems": 1,
      "maxItems": 5,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
        "minLength": 2,
        "maxLength": 20
      },
      "examples": [["stats", "character", "display"], ["inventory", "items", "automation"]]
    },
    "permissions": {
      "type": "array",
      "description": "Required plugin permissions",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": ["read_save", "write_save", "ui_display", "events"]
      },
      "examples": [["read_save", "ui_display"], ["read_save", "write_save", "ui_display"]]
    },
    "minEditorVersion": {
      "type": "string",
      "description": "Minimum required editor version",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$",
      "examples": ["3.4.0", "3.5.0"]
    },
    "homepage": {
      "type": "string",
      "description": "Plugin homepage URL",
      "format": "uri",
      "pattern": "^https?://",
      "examples": ["https://github.com/user/plugin"]
    },
    "repository": {
      "type": "string",
      "description": "Plugin source repository URL",
      "format": "uri",
      "pattern": "^https?://",
      "examples": ["https://github.com/user/plugin"]
    },
    "license": {
      "type": "string",
      "description": "Plugin license (SPDX identifier)",
      "default": "MIT",
      "examples": ["MIT", "GPL-3.0", "Apache-2.0", "BSD-3-Clause"]
    },
    "dependencies": {
      "type": "array",
      "description": "Plugin dependencies (plugin IDs)",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      },
      "examples": [["dependency-plugin-id"], []]
    },
    "screenshots": {
      "type": "array",
      "description": "Screenshot filenames",
      "items": {
        "type": "string",
        "pattern": "\\.(png|jpg|jpeg|gif)$"
      },
      "examples": [["screenshot.png", "screenshot2.png"], []]
    },
    "documentation": {
      "type": "string",
      "description": "Documentation filename",
      "default": "README.md",
      "examples": ["README.md", "DOCUMENTATION.md"]
    },
    "changelog": {
      "type": "string",
      "description": "Changelog filename",
      "default": "CHANGELOG.md",
      "examples": ["CHANGELOG.md", "HISTORY.md"]
    }
  },
  "additionalProperties": false
}
